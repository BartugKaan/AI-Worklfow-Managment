// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  fullName  String
  password  String   // Will be hashed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // User's personal agents
  agents    Agent[]
  workflows Workflow[]
  
  @@map("users")
}

model Agent {
  id          String   @id @default(cuid())
  name        String
  description String
  systemPrompt String
  queryPrompt String
  isActive    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Tool selection checkboxes
  tool_selection_checkboxes_tool1           Boolean @default(false)
  tool_selection_checkboxes_webSearch       Boolean @default(false)
  tool_selection_checkboxes_codeExecution   Boolean @default(false)
  tool_selection_checkboxes_fileAnalysis    Boolean @default(false)
  
  // Optional user relationship - null means global agent
  userId    String?
  user      User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("agents")
}

model Workflow {
  id          String   @id @default(cuid())
  name        String
  description String?
  nodeCount   Int      @default(0)
  agentCount  Int      @default(0)
  nodes       String   // JSON string of nodes array
  edges       String   // JSON string of edges array
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // User relationship - nullable for now to support existing data
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("workflows")
}
